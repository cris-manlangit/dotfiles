" set colorscheme
" colorscheme molokai
" colorscheme badwolf

" enable syntax processing
syntax on
" syntax enable

" number of visual spaces per TAB
set tabstop=4

" number spaces in tab when editing
set softtabstop=4

" tabs are spaces
set expandtab

" show line numbers
set number

" show command in bottom bar
set showcmd

" highlight current line
set cursorline

" load filetype-specific indent files
filetype indent on

" visual autocomplete for command menu
set wildmenu

" highlight matching [{()}]
set showmatch

" search as characters are entered
set incsearch

" highlight matches
set hlsearch












set wrap
" execute pathogen#infect()
" filetype plugin indent on

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>
